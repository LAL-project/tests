TYPE construction_graph
INPUT 0
BODY
	create_graph directed g1 10
	add_edge g1 0 2 false
	add_edge g1 2 0 false
	assert num_edges g1 2
	assert normalised g1
	
	to_undirected g2 g1
	assert num_edges g2 1
	assert normalised g2
	assert exists_edge g2 0 2
	assert exists_edge g2 2 0
	
	create_graph directed g3 10
	add_edge g3 0 2 false
	assert normalised g3
	assert exists_edge g3 0 2
	assert num_edges g3 1
	to_undirected g4 g3
	assert normalised g4
	assert exists_edge g4 0 2
	assert exists_edge g4 2 0
	assert num_edges g4 1
