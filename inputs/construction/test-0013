TYPE construction_graph
INPUT 0
BODY
	create_graph directed g1 10
	assert num_edges g1 0
	assert normalised g1
	check_edge_iterator g1
	
	add_edge g1 0 5 false
	add_edge g1 0 3 false
	assert not_normalised g1
	
	create_graph directed g2 10
	assert num_edges g2 0
	assert normalised g2
	check_edge_iterator g2
	
	add_edge g2 0 5 true
	add_edge g2 0 3 true
	assert normalised g2
	
	disjoint_union g3 g1 g2
	assert not_normalised g3
	assert num_edges g3 4
	assert edges_are g3
		4
		0 5
		0 3
		10 15
		10 13
	check_edge_iterator
